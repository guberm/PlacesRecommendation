{
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=recommendations.db"
  },
  "AiProviders": {
    "OpenAi": {
      "Enabled": false,
      "ApiKey": "",
      "Model": "gpt-4o",
      "MaxTokens": 2000,
      "TimeoutSeconds": 30
    },
    "Anthropic": {
      "Enabled": false,
      "ApiKey": "",
      "Model": "claude-opus-4-6",
      "MaxTokens": 2000,
      "TimeoutSeconds": 30
    },
    "Gemini": {
      "Enabled": false,
      "ApiKey": "",
      "Model": "gemini-2.0-flash",
      "MaxTokens": 2000,
      "TimeoutSeconds": 30
    },
    "AzureOpenAi": {
      "Enabled": false,
      "ApiKey": "",
      "Endpoint": "",
      "DeploymentName": "gpt-4o",
      "TimeoutSeconds": 30
    },
    "OpenRouter": {
      "Enabled": true,
      "ApiKey": "",
      "Model": "arcee-ai/trinity-mini:free",
      "BaseUrl": "https://openrouter.ai/api/v1",
      "MaxTokens": 4000,
      "TimeoutSeconds": 60,
      "AppReferer": "https://recommendations.app",
      "AppTitle": "Recommendations"
    }
  },
  "GooglePlaces": {
    "ApiKey": "",
    "BaseUrl": "https://places.googleapis.com/v1",
    "DefaultRadiusMeters": 1000,
    "MaxResults": 20,
    "TimeoutSeconds": 10
  },
  "Nominatim": {
    "BaseUrl": "https://nominatim.openstreetmap.org",
    "UserAgent": "RecommendationsApp/1.0 (your-email@example.com)",
    "TimeoutSeconds": 10
  },
  "Cache": {
    "DefaultTtlHours": 24,
    "GridPrecisionDecimalPlaces": 3,
    "PurgeOnStartup": true
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}
